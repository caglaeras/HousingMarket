@model Housing.Models.Furniture

@{
    ViewData["Title"] = "Düzenle";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white" style="background: linear-gradient(90deg, #3C8CE7 0%, #00EAFF 100%);">
            <h2 class="mb-0">Eşyayı Düzenle</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input asp-for="Title" class="form-control rounded-3" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <input asp-for="Description" class="form-control rounded-3" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label">Kategori</label>
                        <input asp-for="Category" class="form-control rounded-3" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Condition" class="form-label">Durum</label>
                        <input asp-for="Condition" class="form-control rounded-3" />
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label">Konum</label>
                        <input asp-for="Location" class="form-control rounded-3" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DatePosted" class="form-label">İlan Tarihi</label>
                        <input asp-for="DatePosted" class="form-control rounded-3" />
                        <span asp-validation-for="DatePosted" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="ImagePath" class="form-label">Görsel URL</label>
                        <input asp-for="ImagePath" class="form-control rounded-3" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-warning px-4 py-2 rounded-pill text-white">Kaydet</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}