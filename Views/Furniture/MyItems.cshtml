@model IEnumerable<Housing.Models.Furniture>

@{
    ViewData["Title"] = "Eşyalarım";
}

<h2>Eşyalarım</h2>
<hr />

@if (!Model.Any())
{
    <p>Henüz hiç eşya eklemediniz.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" class="card-img-top" alt="Eşya Görseli" style="height:200px; object-fit:cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><strong>Kategori:</strong> @item.Category</p>
                        <p class="card-text"><strong>Durum:</strong> @item.Condition</p>
                        <p class="card-text"><small class="text-muted">Eklenme Tarihi: @item.DatePosted.ToShortDateString()</small></p>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
