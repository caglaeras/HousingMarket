@model List<Housing.Models.DeliveryContact>

<section class="container my-5">
    <h2 class="mb-4 text-primary">Nakliye Kayıtları</h2>

    <a asp-action="Create" class="btn btn-success mb-3">➕ Nakliye Ekle</a>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Ad Soyad</th>
                <th>Telefon Numarası</th>
                <th>Notlar</th>
                <th>Servis Alanı</th>
                <th>Ücret</th>
                <th>İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.PhoneNumber</td>
                    <td>@contact.Notes</td>
                    <td>@contact.ServiceArea</td>
                    <td>Telefon ile iletişime geçilmelidir.</td>
                    <td>
                        @if (contact.IsSeedData == false)
                        {
                            <a asp-action="Edit" asp-route-id="@contact.Id"
                               style="color: transparent; background-color: transparent; border: none; width: 80px; display: inline-block;">
                                ✏️
                            </a>

                            <form asp-action="Delete" asp-route-id="@contact.Id" method="post" class="d-inline">
                                <button type="submit"
                                        style="color: transparent; background-color: transparent; border: none; width: 60px;"
                                        onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                    🗑️
                                </button>
                            </form>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
