@model Housing.Models.DeliveryContact

<section class="container my-5">
    <h2 class="mb-4 text-warning">✏️ Düzenle</h2>

    <form asp-action="Edit" method="post" class="p-4 bg-light rounded shadow-sm">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success">💾 Save Changes</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">⬅️ Back to List</a>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
