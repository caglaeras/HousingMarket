@model Housing.Models.DeliveryContact

@{
    ViewData["Title"] = "Sil";
}

<section class="container my-5">
    <h2 class="mb-4 text-danger">Nakliye Sil</h2>

    <h5 class="mb-3">Silmek istediğine emin misin?</h5>

    <dl class="row bg-light p-4 rounded shadow-sm">
        <dt class="col-sm-3">İsim</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Telefon Numarası</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Servis Alanı</dt>
        <dd class="col-sm-9">@Model.ServiceArea</dd>

        <dt class="col-sm-3">Notlar</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Vazgeç</a>
    </form>
</section>
