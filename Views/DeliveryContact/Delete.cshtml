@model Housing.Models.DeliveryContact

@{
    ViewData["Title"] = "Sil";
}

<section class="container my-5">
    <h2 class="mb-4 text-danger">🗑️ Delete Delivery Contact</h2>

    <h5 class="mb-3">Are you sure you want to delete this contact?</h5>

    <dl class="row bg-light p-4 rounded shadow-sm">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Service Area</dt>
        <dd class="col-sm-9">@Model.ServiceArea</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</section>
