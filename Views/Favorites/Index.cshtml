@model List<Housing.Models.Furniture>
@{
    ViewData["Title"] = "Beğenilerim";
}

<section class="container my-5">
    <h2 class="display-5 mb-4 text-danger">❤️ Beğenilen Ürünler</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Hiç ürün beğenmediniz.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="card-img-top img-fluid" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        }

                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text mb-1"><strong>Kategori:</strong> <span class="badge bg-info">@item.Category</span></p>
                            <p class="card-text mb-1"><strong>Durum:</strong> <span class="badge bg-secondary">@item.Condition</span></p>
                            <p class="card-text mb-1"><strong>Fiyat:</strong> @item.Value ₺</p>
                        </div>

                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <a asp-controller="Furniture" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detaylar</a>
                            <a asp-action="RemoveFromFavorites" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Kaldır</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
